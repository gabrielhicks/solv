  "bin": {
    "solv": "./dist/index.js"
  },
  "scripts": {
    "test": "jest --coverage=false --detectOpenHandles --maxWorkers=1",
    "update:packages": "ncu -u && yarn",
    "build": "npx ts-node build.ts && npx ts-node add-line.ts",
    "publish": "npm publish",
